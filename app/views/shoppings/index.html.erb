    <%# 商品一覧 %>
    <article class="article-card">
      <a href="" class="article-link"><div>新規商品</div>  
        <div class='main-second'>                                      
          <% @shoppings.each do |shopping| %>
          <li class='list'> 
          <%= link_to shopping_path(shopping.id) do %>
          <div class='article-head'>                            
            <% image_tag shopping.image, class: "article-img" %>
          
            
            <% if shopping.purchase.present? %>
              <div class='article-title'>
                <span>売り切れ!!</span>
              </div>
            <% end %>
          </div>  
            <div class="article-foot">
              <div class="article-title">
                <%= shopping.product_name %>
              </div>
            </div>
            <div class='shopping-price'>
              <span><%= shopping.price %>円<br><%= shopping.shipping_charge.name %></span>
              <div class='star-btn'>
                <%= image_tag "", class:"article-img" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          <% end %>
        </div> 
        <% end %>

        <% unless @shoppings.present? %>
      <article class='article-card'>
        <%= link_to new_shopping_path do %>
        <%= image_tag "4404299_s.jpg", class: "article-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            商品を出品してね！
          </h3>
          <div class='item-price'>
            <span>900円</span>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>



      </a>
    </article>
