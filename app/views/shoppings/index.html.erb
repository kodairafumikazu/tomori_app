    <% if user_signed_in? %>
      <%= link_to root_path, class: 'order-btn' do %>
        <span class='order-title'>商品を購入</span>
        <%= image_tag "210746.jpg", class: "order-btn-icon" %>
      <% end %>
    <% else owner_signed_in? %>
      <%= link_to new_shopping_path, class: 'order-btn' do %>
        <span class='order-btn-text'>出品する</span>
        <%= image_tag "watermark.jpg", class: "order-btn-icon" %>
      <% end %>
    <% end %>
